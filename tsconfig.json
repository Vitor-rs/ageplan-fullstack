{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "paths": {
      "@ageplan/shared-types": [
        "libs/shared-types/src"
      ],
      "@ageplan/shared-types/*": [
        "libs/shared-types/src/*"
      ],
      "@ageplan/shared-utils": [
        "libs/shared-utils/src"
      ],
      "@ageplan/shared-utils/*": [
        "libs/shared-utils/src/*"
      ]
    }
  }
}
